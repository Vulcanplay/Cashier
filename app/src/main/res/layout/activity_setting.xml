<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@color/gray"
    tools:context="icar.a5i4s.com.cashierb.Setting">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/bottom_border"
        android:layout_height="60dp"
        android:visibility="gone"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="模拟补送"
            android:id="@+id/textView2"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/simulate"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="退出登录"
        android:id="@+id/logout"
        android:textColor="@color/white"
        android:background="@color/assertive"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/bottom_border"
        android:layout_height="60dp"
        android:layout_below="@+id/alipayRL">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="POS交易记录"
            android:gravity="center|right"
            android:textColor="@color/gray_text"
            android:textSize="18dp"
            android:id="@+id/history"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/alipayRL"
        android:layout_width="match_parent"
        android:background="@drawable/bottom_border"
        android:layout_height="60dp"
        android:layout_below="@+id/wechat_reprintRL">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="支付宝重打印"
            android:gravity="center|right"
            android:textColor="@color/gray_text"
            android:textSize="18dp"
            android:id="@+id/alipay_reprint"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/bottom_border"
        android:layout_height="60dp"
        android:id="@+id/wechat_reprintRL"
        android:layout_below="@+id/exceptionRL">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="微信支付重打印"
            android:gravity="center|right"
            android:textColor="@color/gray_text"
            android:textSize="18dp"
            android:id="@+id/wechat_reprint"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/exceptionRL"
        android:background="@drawable/bottom_border"
        android:layout_height="60dp"
        android:visibility="gone"
        android:layout_below="@+id/relativeLayout1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="异常交易解除"
            android:gravity="center|right"
            android:textColor="@color/gray_text"
            android:textSize="18dp"
            android:id="@+id/exception"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/relativeLayout1"
        android:background="@drawable/bottom_border"
        android:layout_height="60dp"
        android:layout_below="@+id/relativeLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="签到"
            android:gravity="center|right"
            android:textColor="@color/gray_text"
            android:textSize="18dp"
            android:id="@+id/sign"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/bottom_border"
        android:layout_height="60dp"
        android:visibility="gone"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="环境切换"
            android:id="@+id/textView"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark"
            android:id="@+id/debug"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</RelativeLayout>
